extends layout

block content
    h1= title
    p Without education no human can survive in this fast paced technological world.
    div(class="container-fluid")
        div(class="row")
            -
                let engineering  = results

            each e in engineering
                - let destination = `dispatch(\"/engineering/update?id=${e._id}\")`
                div(class="row-sm-2" class='m-1') Engineering #{e.college}(#{e.fee}) is #{e.branch}
                    button(class="btn-primary ml-1", onclick=destination) Update
            script.
                function dispatch(path){
                    window.location.href = path
                }